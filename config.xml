<?xml version='1.0' encoding='utf-8'?>

<widget id="com.quecompro" 
        version="1.0.0" 
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0">

    <name>QueCompro</name>

    <description>
        ¿Siempre olvidas lo que tenías que comprar? ¿Hiciste una lista pero te la olvidaste llevarla? ¡Que no te suceda nunca más! Con la aplicación QueCompro podrás crear tus listas de comprar y llevarlas a donde sea.
        También tendrás la opción de tener productos en favoritos para guardar los que comprás con mayor frecuencia y no tener que hacer una misma lista varias veces.
    </description>

    <author 
        email="pamelaiglesias96@gmail.com" 
        href="http://quecompro.atwebpages.com">
        Pamela Iglesias - Escuela Da Vinci
    </author>

    <content src="index.html"/>

    <feature name="http://api.phonegap.com/1.0/network" />
	<feature name="http://api.phonegap.com/1.0/notification" />

    <preference name="permissions" value="none"/>
    <preference name="target-device" value="universal" /> 
    <preference name="orientation" value="portrait" /> 
    <preference name="fullscreen" value="false" /> 
    <preference name="webviewbounce" value="true" /> 
    <preference name="showSplashScreenSpinner" value="false" /> 
    <preference name="android-installLocation" value="auto" /> 
    <preference name="splashScreenDelay" value="6000" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="14"/>
    <preference name='pgb-builder-version' value='2' />
    
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1"/> 
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1"/>

    <platform name="android" />
    <icon src="icon.png" />
    <icon platform="android" qualifier="ldpi" src="res/icon/android/icon-ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="res/icon/android/icon-mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="res/icon/android/icon-hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="res/icon/android/icon-xhdpi.png" />
    
    <splash src="splash.png" />
    <splash platform="android" qualifier="ldpi" src="res/screen/android/screen-ldpi.png" />
    <splash platform="android" qualifier="mdpi" src="res/screen/android/screen-mdpi.png" />
    <splash platform="android" qualifier="hdpi" src="res/screen/android/screen-hdpi.png" />
    <splash platform="android" qualifier="xhdpi" src="res/screen/android/screen-xhdpi.png" />
  

    <access origin="*"/>
    <allow-navigation href="http://quecompro.atwebpages.com/*" />
    <allow-navigation href="*://*.quecompro.atwebpages.com/*" />
    <allow-navigation href="*" />

    
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>